<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User List</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-green-100 flex justify-center items-center min-h-screen">
  <div class="text-2xl mb-4 max-w-4xl bg-white rounded-2xl shadow-md p-8">
    <div class="mb-2">
      <h2 class="text-2xl font-bold text-green-700 text-center">Welcome <%= session.role %></h2>
        </div>
      <div class="space-x-2 flex justify-between mb-4">
         <a href="/logout" 
         class="bg-red-500 hover:bg-red-600 text-white px-4 py-2 rounded-lg text-sm transition duration-200">Logout</a>
         <a href="/add"
         class="bg-green-500 hover:bg-green-600 text-white px-4 py-2 rounded-lg text-sm transition duration-200">Add New</a>
    </div>

 <div class="overflow-auto">
   <table border="1" class="w-full table-auto border border-green-200 rounded-lg overflow-hidden">
    <thead class="bg-green-100 text-green-800">
      <tr>
        <th class="px-5 py-2 text-left">ID</th>
        <th class="px-5 py-2 text-left">Name</th>
        <th class="px-5 py-2 text-left">Action</th>
      </tr>
    </thead>
   <tbody class="text-gray-700">
  <% users.forEach(user => { %>
    <tr class="border-t border-green-200 hover:bg-green-200 transition duration-200" >
      <td class="px-4 py-2"><%= user.id %></td>
      <td class="px-4 py-2"><%= user.username %></td>
      <td class="px-4 py-2 space-x-2">
        <a href="/edit/<%= user.id %>">Edit</a>
        <% if (session.role === 'admin') { %>
          <a href="/delete/<%= user.id %>">Delete</a>
        <% } %>
      </td>
    </tr>
  <% }) %>
   </tbody>

  </table>
</div>
</div>
</body>
</html>